
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manhwa Reader</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Manhwa Reader</h1>
    </header>
    <main>
        <h2>Manhwa Terbaru</h2>
        <div class="manhwa-list">
    <% manhwaList.forEach(function(manhwa) { %>
        <div class="manhwa-item">
            <img src="<%= manhwa.image %>" alt="<%= manhwa.title %>">
            <h3><%= manhwa.title %></h3>
            <!-- Tautkan ID manhwa ke halaman detail -->
            <a href="/manhwa-detail/<%= manhwa.id %>">Baca Selengkapnya</a>
        </div>
    <% }) %>
</div>
    </main>
</body>
</html>
